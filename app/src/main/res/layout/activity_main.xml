<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="16dp"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:src="@drawable/firebase_lockup_400" />-->

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="logout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/log_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="24dp"
        android:background="@color/peach"
        android:backgroundTint="@color/peach"
        android:text="log_Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/face_register_page_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/profile_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginRight="16dp"
        android:background="@color/peach"
        android:backgroundTint="@color/peach"
        android:text="profile"
        app:layout_constraintBaseline_toBaselineOf="@+id/face_register_page_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="map"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/logout_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/face_register_page_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="72dp"
        android:background="@color/peach"
        android:backgroundTint="@color/peach"
        android:text="faceregister"
        app:layout_constraintEnd_toStartOf="@+id/profile_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/log_button"
        app:layout_constraintTop_toTopOf="parent" />


    <!--<Button-->
    <!--android:id="@+id/subscribeButton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_marginTop="20dp"-->
    <!--android:text="subscribe_to_news" />-->


    <EditText
        android:id="@+id/timer_expire_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="expire time(분)"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/face_register_page_button" />

    <EditText
        android:id="@+id/timer_interval_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="interval time(분)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_expire_edittext"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_timer_start"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Timer Start"
        app:layout_constraintBottom_toTopOf="@+id/button_emergency"
        app:layout_constraintEnd_toStartOf="@+id/button_timer_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer_interval_edittext" />

    <Button
        android:id="@+id/button_timer_end"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:text="Timer End"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_timer_start"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--<Button-->
        <!--android:id="@+id/button_emergency"-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:text="Emergency"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/button_timer_end" />-->

    <ImageView
        android:id="@+id/button_emergency"
        android:layout_width="130dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/power_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_timer_end"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>